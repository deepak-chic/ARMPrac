{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "String",
            "defaultValue": ""
        },
        "virtualNetworkName": {
            "defaultValue": "myVnet",
            "type": "String"
        },
        "tags": {
            "defaultValue": {
                "Cost Center": "1108-300-8602"
            },
            "type": "Object"
        },
        "addressPrefixes": {
            "defaultValue": [
                "10.1.0.0/16"
            ],
            "type": "Array"
        },
        "subnetsData": {
            "defaultValue": [
                {
                    "name": "default",
                    "addressPrefix": "10.1.0.0/24",
                    "nsgName": ""
                }
            ],
            "type": "Array"
        }
        // "virtualNetworks_vnet_z_cushub_001_externalid": {
